# Docker Compose Environment Variables
# Copy to .env in the root directory before running docker-compose

# Database
DB_USER=postgres
DB_PASSWORD=your_secure_database_password
DB_NAME=notes_tasks_db

# JWT Secret (REQUIRED - generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# CORS - Set to your frontend domain
CORS_ORIGINS=https://your-frontend-domain.com

# API URL for frontend (used at build time)
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api
